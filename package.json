{
  "name": "yggdrasill",
  "version": "1.0.0",
  "description": "A minimal theme for Hugo",
  "scripts": {
    "prepare": "husky install",
    "lint": "prettier . --check",
    "lint:js": "eslint \"assets/js/**/*.js\"",
    "lint:scss": "stylelint \"assets/scss/**/*.scss\"",
    "fix": "prettier . --write"
  },
  "author": "Yuchen Cheng",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "eslint": "^8.23.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "prettier-plugin-go-template": "^0.0.13",
    "stylelint": "^14.11.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^5.0.0"
  },
  "lint-staged": {
    "*.{js,scss,html}": [
      "prettier . --write"
    ]
  }
}
